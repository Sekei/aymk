<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_black_top_radius"
    android:fitsSystemWindows="true"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/gift_view_pager"
        android:layout_width="0dp"
        android:layout_height="@dimen/x400"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <LinearLayout
        android:id="@+id/ll_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/gift_view_pager"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10086 >"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gift_view_pager"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        />


    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorPrimary"
        android:text="发送"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gift_view_pager"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        />

</android.support.constraint.ConstraintLayout>