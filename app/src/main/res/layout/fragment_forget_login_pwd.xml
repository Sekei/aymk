<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include2"
        layout="@layout/top_back_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="phone"
        android:hint="@string/hint_enter_the_phone"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:id="@+id/et_phone"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/setbar_zb"
        android:maxLength="11"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText

        android:inputType="number"
        android:id="@+id/et_code"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/setbar_zb"
        android:hint="@string/hint_enter_code"
        android:maxLength="6"
        android:paddingLeft="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />


    <TextView
        android:id="@+id/getYzm"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/setbar_seach"
        android:gravity="center"
        android:text="获取验证码"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorTextGC"
        app:layout_constraintTop_toTopOf="@+id/et_code"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_code"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.727" />


    <TextView
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/setbar_mm"
        android:gravity="center"
        android:text="@string/txt_next"
        android:textColor="@color/pure_white"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_code" />
</android.support.constraint.ConstraintLayout>
