<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <include
        android:id="@+id/include3"
        layout="@layout/top_back_title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include3">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:background="@color/pure_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="擅长及诊所介绍"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1" />

            <EditText
                android:gravity="start"
                android:id="@+id/ed1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:background="@color/pure_white"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/view1"
                app:layout_constraintRight_toRightOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@+id/textView34"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="8dp" />


            <TextView

                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="8dp"
                android:text="500"
                android:textColor="@color/colorTextG6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/view1"
                app:layout_constraintRight_toRightOf="@+id/ed1" />


            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="@color/pure_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />




            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="医学背景"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <EditText
                android:gravity="start"
                android:id="@+id/ed2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:background="@color/pure_white"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/view2"
                app:layout_constraintRight_toRightOf="@id/view2"
                app:layout_constraintTop_toBottomOf="@+id/tv2"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />


            <TextView

                android:id="@+id/tv22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="8dp"
                android:text="500"
                android:textColor="@color/colorTextG6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintRight_toRightOf="@+id/ed2" />








            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="@color/pure_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />



            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="学术研究成功、获奖"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3" />

            <EditText
                android:gravity="start"
                android:id="@+id/ed3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:background="@color/pure_white"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/view3"
                app:layout_constraintRight_toRightOf="@id/view3"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />


            <TextView

                android:id="@+id/tv33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="8dp"
                android:text="500"
                android:textColor="@color/colorTextG6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/view3"
                app:layout_constraintRight_toRightOf="@+id/ed3" />







            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="@color/pure_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />





            <TextView
                android:id="@+id/tv_yingfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="医生寄语"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/view4" />

            <EditText
                android:gravity="start"
                android:id="@+id/ed4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:background="@color/pure_white"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/view4"
                app:layout_constraintRight_toRightOf="@id/view4"
                app:layout_constraintTop_toBottomOf="@+id/tv_yingfu"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />


            <TextView

                android:id="@+id/tv44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="8dp"
                android:text="500"
                android:textColor="@color/colorTextG6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/view4"
                app:layout_constraintRight_toRightOf="@+id/ed4" />








            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/pure_white"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                 />


        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
