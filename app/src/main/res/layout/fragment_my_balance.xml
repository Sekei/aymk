<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_4"
    android:layout_height="match_parent">


    <View
        android:background="@color/pure_white"
        android:id="@+id/textView36"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="26sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView36"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView36" />

    <TextView
        android:textColor="@color/colorTextG6"
        android:textSize="16sp"
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户余额(元)"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView36"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView36" />

    <TextView
        android:background="@drawable/setbar_seach"
        android:gravity="center"
        android:id="@+id/tv_chongzhi"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="充值"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView36"
        app:layout_constraintRight_toRightOf="@+id/textView36"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_tixian"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setbar_seach"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView36"
        app:layout_constraintRight_toRightOf="@+id/textView36"
        app:layout_constraintTop_toBottomOf="@+id/tv_chongzhi" />

    <TextView
        android:textColor="@color/colorTextG3"
        android:textSize="16sp"
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意事项"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView36"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:textSize="13sp"
        android:textColor="@color/colorTextG6"
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView41"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
