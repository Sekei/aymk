<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/include6"
        layout="@layout/top_back_title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/easyRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include6"/>



    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="2017-11-01 周五"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/pure_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/easyRecyclerView" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:text="可预约"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/consult_time_spread"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintRight_toRightOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/time"
        android:layout_marginEnd="15dp" />


    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/easyRecyclerViewTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time">
    </com.jude.easyrecyclerview.EasyRecyclerView>


</android.support.constraint.ConstraintLayout>