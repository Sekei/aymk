<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="2017-11-01"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/pure_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:text="12积分"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/consult_time_spread"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintRight_toRightOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/time"
        android:layout_marginEnd="15dp" />

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/easyRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time"></com.jude.easyrecyclerview.EasyRecyclerView>




</android.support.constraint.ConstraintLayout>