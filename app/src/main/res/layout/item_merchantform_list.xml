<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pure_white">


    <ImageView
        android:id="@+id/img_merchants"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_defaults"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="标题标题标题标题标题"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/img_merchants"
        app:layout_constraintTop_toTopOf="@+id/img_merchants"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="数量:12"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12月到7月"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_number"
        />
    <TextView
        android:id="@+id/tv_sum_price"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:text="888.8"
        android:textSize="12sp"
        />
<TextView
    android:id="@+id/tv_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="确认订单"
    android:textColor="@color/white"
    android:padding="10dp"
    android:background="@drawable/shape_line_bg_green"
    app:layout_constraintTop_toBottomOf="@+id/img_merchants"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="10dp"
    />
  <TextView
      android:id="@+id/tv_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="取消订单"
      android:background="@drawable/shape_line"
      android:padding="10dp"
      app:layout_constraintTop_toTopOf="@+id/tv_right"
      app:layout_constraintRight_toLeftOf="@+id/tv_right"
      android:layout_marginRight="10dp"
      />
<TextView
    android:id="@+id/tv_1"
    android:layout_marginTop="10dp"
    android:layout_width="0dp"
    android:layout_height="10dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/home_bg"
    app:layout_constraintTop_toBottomOf="@id/tv_right"/>
</android.support.constraint.ConstraintLayout>
