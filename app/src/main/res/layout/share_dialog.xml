<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_80"
        android:orientation="vertical">

        <TextView

            android:textSize="@dimen/y30"
            android:textColor="@color/colorTextG3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:text="分享到" />

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#33a7adb4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y224"
            android:background="@color/pure_white"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/btn_share_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/share_wx"
                android:gravity="center"
                android:onClick=""
                android:text="微信好友"
                android:textColor="@color/colorTextG6"
                android:textSize="@dimen/y30" />


            <TextView
                android:id="@+id/btn_share_circle"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/share_friend"
                android:gravity="center"
                android:text="微信朋友圈"

                android:textColor="@color/colorTextG6"
                android:textSize="@dimen/y30" />
            <TextView
                android:id="@+id/btn_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/share_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/colorTextG6"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/btn_share_qqzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/share_qqzone"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/colorTextG6"
                android:textSize="@dimen/y30"
                 />


        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#33a7adb4" />
<TextView
    android:background="@color/pure_white"
    android:textColor="@color/colorTextG6"
    android:id="@+id/tv_cancel"
    android:textSize="@dimen/y34"
    android:gravity="center"
    android:text="取消"
    android:layout_below="@+id/line1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100" />


</RelativeLayout>