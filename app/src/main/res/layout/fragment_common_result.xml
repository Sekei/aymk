<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/pure_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/top_back_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include10" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="155dp"
        app:srcCompat="@drawable/test_norm_pic"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/include10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="测试结果"
        android:textColor="@color/colorTextG6"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="返回测试首页"
        android:textColor="@color/pure_white"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/resultContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你富有创意，甚至音乐等艺术方面的天分，喜欢凭直觉与感做决定，而且第六感很强大哦！"
        android:gravity="center"
        android:textColor="@color/colorTextG3"
        android:textSize="16sp"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>