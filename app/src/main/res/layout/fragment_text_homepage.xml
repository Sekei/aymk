<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/pure_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/top_back_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include10" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="155dp"
        app:srcCompat="@drawable/test_norm_pic"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/include10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/descripe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今晚打老虎，普通测试的忽悠说明"
        android:textColor="@color/colorTextG6"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="开始测试"
        android:textColor="@color/pure_white"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/setbar_fh_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>