<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include2"
        layout="@layout/top_back_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="手机号码"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include2" />


    <TextView
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:id="@+id/et_phone"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:maxLength="15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_phone"
        app:layout_constraintVertical_bias="0.0" />



 <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="设置密码"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone" />


    <EditText

        android:inputType="numberPassword"
        android:paddingLeft="8dp"
        android:id="@+id/et_pwd"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:hint="@string/hint_please_enter_new_password"
        android:maxLength="6"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_pwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_pwd"
        app:layout_constraintVertical_bias="0.0" />



<TextView
        android:id="@+id/tv_pwd2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="再次输入"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd" />


    <EditText
        android:inputType="numberPassword"
        android:paddingLeft="8dp"
        android:id="@+id/et_pwd2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:hint="@string/hint_enter_the_password_again"
        android:maxLength="6"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pwd2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_pwd2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_pwd2"
        app:layout_constraintVertical_bias="0.0" />



    <View
        android:id="@+id/tv_bg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="再次输入"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />



    <TextView
        android:maxLines="6"
        android:inputType="number"
        android:id="@+id/tv_code"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="验证码"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_bg"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bg"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText

        android:inputType="number"
        android:id="@+id/et_code"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:hint="@string/hint_enter_code"
        android:maxLength="6"
        android:paddingLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bg"
        app:layout_constraintLeft_toRightOf="@+id/tv_pwd2"
        app:layout_constraintTop_toTopOf="@+id/tv_bg"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/getYzm"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/setbar_seach"
        android:gravity="center"
        android:text="获取验证码"
        app:layout_constraintHorizontal_weight="2"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorTextGC"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/tv_bg"
        app:layout_constraintTop_toTopOf="@+id/tv_bg"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bg"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.6" />


    <TextView
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/setbar_mm"
        android:gravity="center"
        android:text="@string/txt_confirm_updata"
        android:textColor="@color/pure_white"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:textSize="12sp"
        android:textColor="@color/tx_4"
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bg" />


</android.support.constraint.ConstraintLayout>
