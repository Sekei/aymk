<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_history_pic_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="@string/profession_test_report"
        android:textColor="@color/colorTextG3"
        android:textSize="13sp"

        app:layout_constraintLeft_toLeftOf="@+id/bg"
        app:layout_constraintRight_toRightOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg" />


    <TextView
        android:ellipsize="end"
        android:lines="1"
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal|start"
        android:text="测试人：张继科"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tittle"
        app:layout_constraintTop_toBottomOf="@+id/tittle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="日期：2017年11月1日"
        android:gravity="start"
        android:textColor="@color/colorTextG6"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/bg" />

</android.support.constraint.ConstraintLayout>