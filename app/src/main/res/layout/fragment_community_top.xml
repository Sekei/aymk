<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="热门模块"
        android:textColor="@color/colorTextG6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintLeft_toLeftOf="@+id/bg"
        app:layout_constraintRight_toRightOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg" />


    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:background="@color/e5"
        app:layout_constraintBottom_toBottomOf="@+id/tittle"
        app:layout_constraintRight_toLeftOf="@+id/tittle"
        app:layout_constraintTop_toTopOf="@+id/tittle" />

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/e5"
        app:layout_constraintBottom_toBottomOf="@+id/tittle"
        app:layout_constraintLeft_toRightOf="@+id/tittle"
        app:layout_constraintTop_toTopOf="@+id/tittle" />

    <LinearLayout
        android:id="@+id/ll_point_group"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:background="@color/pure_white"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager" />

    <View
        android:id="@+id/bgAll"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/pure_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_point_group" />


    <TextView
        android:id="@+id/tittleAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="全部版块"
        android:textColor="@color/colorTextG6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/bgAll"
        app:layout_constraintLeft_toLeftOf="@+id/bgAll"
        app:layout_constraintRight_toRightOf="@+id/bgAll"
        app:layout_constraintTop_toTopOf="@+id/bgAll" />


    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:background="@color/e5"
        app:layout_constraintBottom_toBottomOf="@+id/tittleAll"
        app:layout_constraintRight_toLeftOf="@+id/tittleAll"
        app:layout_constraintTop_toTopOf="@+id/tittleAll" />

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/e5"
        app:layout_constraintBottom_toBottomOf="@+id/tittleAll"
        app:layout_constraintLeft_toRightOf="@+id/tittleAll"
        app:layout_constraintTop_toTopOf="@+id/tittleAll" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="149dp"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg" />

</android.support.constraint.ConstraintLayout>