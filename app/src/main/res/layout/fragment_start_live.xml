<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:layout_marginTop="28dp"
        android:textColor="@color/pure_white"
        android:textSize="14sp"
        android:drawableLeft="@drawable/location3x"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海市"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" />


    <ImageView
        android:padding="8dp"
        android:scaleType="fitXY"
        android:id="@+id/img_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/live_icon_del3x"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp" />

    <EditText
        android:textColor="@color/pure_white"
        android:textColorHint="@color/pure_white"
        android:paddingLeft="16dp"
        android:hint="给直播添加个标题吧"
        android:background="@drawable/shape_live_bg3_back"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="108dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/editText" />

    <TextView

        android:background="@drawable/shape_live_bg3_back"
        android:textColor="@color/pure_white"
        android:gravity="center"
        android:id="@+id/tv_update_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="上传图片"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />




    <TextView
        android:id="@+id/tv_start_live"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/shape_live_bg_green"
        android:gravity="center"
        android:text="开始直播"
        android:textColor="@color/pure_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="直播即代表你同意《爱医美康平台直播协议》"
        android:textColor="@color/pure_white"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/img_update_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_update_pic"
        app:layout_constraintLeft_toLeftOf="@+id/tv_update_pic"
        app:layout_constraintRight_toRightOf="@+id/tv_update_pic"
        app:layout_constraintTop_toTopOf="@+id/tv_update_pic"
        />


</android.support.constraint.ConstraintLayout>
