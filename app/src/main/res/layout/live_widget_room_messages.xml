<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview"
        android:layout_width="@dimen/x550"
        android:layout_height="@dimen/x450"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/y120"
        android:paddingLeft="@dimen/x30" />

    <LinearLayout
        android:id="@+id/container_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="@color/input"
        android:gravity="center_vertical"
        android:orientation="horizontal"
       >



        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:layout_weight="1"
            android:background="@drawable/shape_live_edit_white"
            android:hint="说点什么吧~"
            android:maxLines="3"
            android:minHeight="@dimen/y70"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x2"
            android:textColor="#555555"
            android:textColorHint="#555555"
            android:textSize="@dimen/y32" />

        <Button
            android:id="@+id/btn_send"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/y8"
            android:layout_marginRight="@dimen/x12"
            android:layout_weight="0"
            android:background="@drawable/shape_live_edit_green"
            android:text="发送"
            android:textColor="@color/pure_white"
            android:textSize="@dimen/y32" />
    </LinearLayout>
</RelativeLayout>
