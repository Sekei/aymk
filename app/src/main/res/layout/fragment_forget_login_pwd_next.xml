<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include2"
        layout="@layout/top_back_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:id="@+id/vi_phone"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:maxLength="15"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        />


    <EditText
        android:id="@+id/ed_pwd"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:hint="@string/hint_please_enter_new_password"
        android:inputType="text"
        android:maxLength="16"
        app:layout_constraintBottom_toBottomOf="@+id/vi_phone"
        app:layout_constraintLeft_toLeftOf="@+id/vi_phone"
        app:layout_constraintRight_toLeftOf="@+id/seePwd"
        app:layout_constraintTop_toTopOf="@+id/vi_phone"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/seePwd"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        app:srcCompat="@drawable/register_eye_closed"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vi_phone"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/vi_phone"
        android:layout_marginTop="0dp" />




     <View
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:id="@+id/vi_pwd"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:maxLength="15"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/vi_phone"
        />







    <EditText
        android:inputType="text"
        android:id="@+id/ed_pwd2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/pure_white"
        android:hint="@string/hint_please_enter_new_password"
        android:maxLength="16"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/vi_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/vi_pwd"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/vi_pwd"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/seePwd2"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/seePwd2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        app:srcCompat="@drawable/register_eye_closed"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vi_pwd"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/vi_pwd"
        android:layout_marginTop="0dp" />




    <TextView
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/setbar_mm"
        android:gravity="center"
        android:text="@string/txt_next"
        android:textColor="@color/pure_white"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/vi_pwd" />


</android.support.constraint.ConstraintLayout>
