<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pure_white"
    android:layout_margin="5dp"
    >
    <TextView
        android:id="@+id/tv_edit_2"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/doctor_icon_edito"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务期限"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_2"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="半年"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/tv1"
        app:layout_constraintBottom_toBottomOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:background="@drawable/shape_line"
        />
<TextView
    android:id="@+id/tv2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@+id/tv1"
    app:layout_constraintTop_toBottomOf="@+id/tv1"
    android:textSize="14sp"
    android:layout_marginTop="10dp"
    android:text="服务价格"
    />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0元"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/tv2"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginTop="10dp"
        android:text="服务内容"/>
    <TextView
        android:id="@+id/tv_servicecontet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0元"
        android:textSize="14sp"
       app:layout_constraintLeft_toLeftOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_servicecontet"
        android:layout_marginTop="10dp"
        android:background="@color/home_bg"/>
</android.support.constraint.ConstraintLayout>