<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pure_white">

    <ImageView

        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:textColor="@color/colorAccent"
        android:paddingRight="14dp"
        android:paddingTop="2dp"
        android:paddingLeft="14dp"
        android:paddingBottom="2dp"
        android:background="@drawable/shape_live"
        android:textSize="10sp"
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="直播"
        app:layout_constraintRight_toRightOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/img" />



    <View
        android:background="@color/pure_white"
        android:id="@+id/textView63"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/img_doctor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ava_defaultx"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/textView63"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView63"
        />



    <TextView

        android:id="@+id/tv_live_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="这里是直播标题"
        android:textColor="@color/colorTextG3"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/img_doctor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView63" />


</android.support.constraint.ConstraintLayout>
