<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_8"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/pure_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/doctor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="职位级别"
            android:textColor="@color/colorTextG6"
            android:textSize="@dimen/y24" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_below="@+id/doctor_title"
            android:id="@+id/mFlexboxLayout_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            app:flexWrap="wrap" />

        <TextView
            android:layout_below="@+id/mFlexboxLayout_doctor"
            android:id="@+id/hospital_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="医院级别"
            android:textColor="@color/colorTextG6"
            android:textSize="@dimen/y24" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_below="@+id/hospital_title"
            android:id="@+id/mFlexboxLayout_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            app:flexWrap="wrap" />





        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/mFlexboxLayout_hospital"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/ok"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/pure_white"
                android:textSize="14sp"
                />

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:id="@+id/clear"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/e5"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/colorTextG3"
                android:textSize="14sp"
                />

        </LinearLayout>


    </RelativeLayout>




</RelativeLayout>