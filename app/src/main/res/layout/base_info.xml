<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <TextView
        android:id="@+id/heightTittle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="所在医院"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hospital"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:text="同济大学第一附属医院"
        android:textColor="@color/colorTextG6"
        app:layout_constraintBottom_toBottomOf="@+id/heightTittle"
        app:layout_constraintLeft_toRightOf="@+id/heightTittle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heightTittle" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="职称级别"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightTittle" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/me_right"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:text="主治医师"
        android:textColor="@color/colorTextG6"
        app:layout_constraintBottom_toBottomOf="@+id/t1"
        app:layout_constraintLeft_toRightOf="@+id/t1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t1" />


    <TextView
        android:id="@+id/tv_edit_2"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="工作科室"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1" />

    <TextView
        android:id="@+id/tv_department"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/me_right"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:text="内科"
        android:textColor="@color/colorTextG6"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_2"
        app:layout_constraintLeft_toRightOf="@+id/tv_edit_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_2" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="主治类型"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_2" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:text="内科"
        android:textColor="@color/colorTextG6"
        app:layout_constraintBottom_toBottomOf="@+id/t3"
        app:layout_constraintLeft_toRightOf="@+id/t3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t3" />


    <TextView
        android:id="@+id/t4"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/pure_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="个人介绍"
        android:textColor="@color/colorTextG3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t3" />


    <TextView
        android:id="@+id/tv_person_info"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/pure_white"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/me_right"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:text="点击编辑"
        android:textColor="@color/colorTextG6"
        app:layout_constraintBottom_toBottomOf="@+id/t4"
        app:layout_constraintLeft_toRightOf="@+id/t4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t4" />


</android.support.constraint.ConstraintLayout>
